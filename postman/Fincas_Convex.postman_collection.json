{
  "info": {
    "name": "Fincas Convex API",
    "description": "Colección de endpoints para probar la API de Fincas con Convex y Better Auth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "convex_url",
      "value": "https://your-deployment.convex.cloud",
      "type": "string"
    },
    {
      "key": "convex_site_url",
      "value": "https://your-deployment.convex.site",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Autenticación",
      "item": [
        {
          "name": "Registrar Usuario",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.token) {",
                  "        pm.collectionVariables.set('auth_token', response.token);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"Usuario de Prueba\"\n}"
            },
            "url": {
              "raw": "{{convex_site_url}}/api/auth/sign-up",
              "host": ["{{convex_site_url}}"],
              "path": ["api", "auth", "sign-up"]
            }
          }
        },
        {
          "name": "Iniciar Sesión",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.token) {",
                  "        pm.collectionVariables.set('auth_token', response.token);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{convex_site_url}}/api/auth/sign-in/email",
              "host": ["{{convex_site_url}}"],
              "path": ["api", "auth", "sign-in", "email"]
            }
          }
        },
        {
          "name": "Obtener Sesión",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{convex_site_url}}/api/auth/session",
              "host": ["{{convex_site_url}}"],
              "path": ["api", "auth", "session"]
            }
          }
        },
        {
          "name": "Cerrar Sesión",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{convex_site_url}}/api/auth/sign-out",
              "host": ["{{convex_site_url}}"],
              "path": ["api", "auth", "sign-out"]
            }
          }
        }
      ]
    },
    {
      "name": "Fincas",
      "item": [
        {
          "name": "Listar Fincas",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "disabled": true
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"path\": \"fincas:list\",\n  \"args\": {\n    \"limit\": 20,\n    \"location\": \"Girardot\",\n    \"minCapacity\": 10\n  }\n}"
            },
            "url": {
              "raw": "{{convex_url}}/api/runQuery",
              "host": ["{{convex_url}}"],
              "path": ["api", "runQuery"]
            },
            "description": "Lista todas las fincas con filtros opcionales"
