              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"path\": \"fincas:update\",\n  \"args\": {\n    \"id\": \"property_id_here\",\n    \"title\": \"Finca La Esperanza Actualizada\",\n    \"priceBase\": 550000\n  }\n}"
            },
            "url": {
              "raw": "{{convex_url}}/api/runMutation",
              "host": ["{{convex_url}}"],
              "path": ["api", "runMutation"]
