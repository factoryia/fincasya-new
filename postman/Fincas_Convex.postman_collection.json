    {
      "name": "Conocimiento (RAG)",
      "description": "Base de conocimiento vectorizada: listar, subir, buscar y indexar fincas",
      "item": [
        {
          "name": "Listar documentos RAG",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"path\": \"knowledge:list\",\n  \"args\": {\n    \"paginationOpts\": { \"numItems\": 20, \"cursor\": null }\n  }\n}"
            },
            "url": { "raw": "{{convex_url}}/api/runQuery", "host": ["{{convex_url}}"], "path": ["api", "runQuery"] }
          }
        },
        {
          "name": "Buscar en conocimiento (semántico)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"path\": \"knowledge:search\",\n  \"args\": {\n    \"query\": \"fincas con piscina en Girardot\",\n    \"limit\": 5\n  }\n}"
            },
            "url": { "raw": "{{convex_url}}/api/runAction", "host": ["{{convex_url}}"], "path": ["api", "runAction"] }
          }
        },
        {
          "name": "Añadir texto al conocimiento",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"path\": \"knowledge:addText\",\n  \"args\": {\n    \"title\": \"Normas de temporada alta\",\n    \"text\": \"En temporada alta (diciembre-enero) la estancia mínima es de 6 noches. No aplican descuentos.\",\n    \"category\": \"normas\"\n  }\n}"
            },
            "url": { "raw": "{{convex_url}}/api/runAction", "host": ["{{convex_url}}"], "path": ["api", "runAction"] }
          }
        },
        {
          "name": "Indexar fincas en RAG",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"path\": \"knowledge:indexFincas\",\n  \"args\": {\n    \"limit\": 50\n  }\n}"
            },
            "url": { "raw": "{{convex_url}}/api/runAction", "host": ["{{convex_url}}"], "path": ["api", "runAction"] }
          },
          "description": "Indexa las fincas de la BD en la base vectorial para búsqueda semántica"
        },
        {
          "name": "Eliminar documento RAG",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"path\": \"knowledge:deleteFile\",\n  \"args\": {\n    \"entryId\": \"entry_id_from_list\"\n  }\n}"
            },
            "url": { "raw": "{{convex_url}}/api/runMutation", "host": ["{{convex_url}}"], "path": ["api", "runMutation"] }
          }
        }
      ]
    },
