            "body": {
              "mode": "raw",
              "raw": "{\n  \"path\": \"fincas:getById\",\n  \"args\": {\n    \"id\": \"property_id_here\"\n  }\n}"
            },
            "url": {
              "raw": "{{convex_url}}/api/runQuery",
              "host": ["{{convex_url}}"],
              "path": ["api", "runQuery"]
