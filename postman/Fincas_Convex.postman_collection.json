            "body": {
              "mode": "raw",
              "raw": "{\n  \"path\": \"fincas:search\",\n  \"args\": {\n    \"query\": \"piscina\",\n    \"limit\": 10\n  }\n}"
            },
            "url": {
              "raw": "{{convex_url}}/api/runQuery",
              "host": ["{{convex_url}}"],
              "path": ["api", "runQuery"]
            }
